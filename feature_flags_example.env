# ===========================================
# DIGEF-X Power Management API - Configuração
# ===========================================

# ===========================================
# FEATURE FLAGS - Sistema de separação de funcionalidades
# ===========================================

# Habilitar/desabilitar API FastAPI
ENABLE_API=true

# Habilitar/desabilitar monitores básicos (host, serial, camera)
ENABLE_BASIC_MONITORS=true

# Habilitar/desabilitar monitoramento de arquivos de vídeo
ENABLE_FILE_MONITORING=true

# Habilitar/desabilitar sistemas de background (event handlers, detecção, etc.)
ENABLE_BACKGROUND_SYSTEMS=true

# Modo de execução (sobrescreve as feature flags acima)
# Opções: full, api_only, background_only, monitors_only, custom
EXECUTION_MODE=full

# ===========================================
# CONFIGURAÇÕES DE EXECUÇÃO POR MODO
# ===========================================

# Modo FULL (tudo habilitado):
# ENABLE_API=true
# ENABLE_BASIC_MONITORS=true
# ENABLE_FILE_MONITORING=true
# ENABLE_BACKGROUND_SYSTEMS=true
# EXECUTION_MODE=full

# Modo API_ONLY (apenas API + monitores básicos):
# ENABLE_API=true
# ENABLE_BASIC_MONITORS=true
# ENABLE_FILE_MONITORING=false
# ENABLE_BACKGROUND_SYSTEMS=false
# EXECUTION_MODE=api_only

# Modo BACKGROUND_ONLY (apenas processamento de arquivos + sistemas de background):
# ENABLE_API=false
# ENABLE_BASIC_MONITORS=false
# ENABLE_FILE_MONITORING=true
# ENABLE_BACKGROUND_SYSTEMS=true
# EXECUTION_MODE=background_only

# Modo MONITORS_ONLY (apenas monitores básicos):
# ENABLE_API=false
# ENABLE_BASIC_MONITORS=true
# ENABLE_FILE_MONITORING=false
# ENABLE_BACKGROUND_SYSTEMS=false
# EXECUTION_MODE=monitors_only

# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================

# Configurações de servidor
HOST=0.0.0.0
PORT=7000
DEBUG=false

# Configurações de banco de dados
DATABASE_URL=sqlite:///./data/app.db

# Configurações de segurança
SECRET_KEY=digefxsecretkey
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CONFIGURAÇÕES DE DETECÇÃO
# ===========================================

# Configurações de modelos YOLO
YOLO_CONFIDENCE=0.6
YOLO_MODEL=models/V11n-ND-V2.pt
YOLO_MODEL_INTERNAL=models/V11-Interior.pt
YOLO_MODEL_EXTERNAL=models/V11n-ND-V2.pt

# Configurações de processamento
DETECTION_MAX_WORKERS=16
ALERT_COOLDOWN_HOURS=1
DETECTION_THRESHOLD_PERCENT=0.1
SKIP_FRAMES=3

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================

# Diretório de vídeos
VIDEO_DIR=/home/digefx/Documents/digefx_monitor/frigate/storage/recordings

# Intervalos de monitoramento
CAMERA_MONITOR_INTERVAL=10
HOST_MONITOR_INTERVAL=30

# Configurações de serial
SERIAL_PORT=/dev/ttyACM0
SERIAL_BAUDRATE=115200
SERIAL_TIMEOUT=1

# ===========================================
# CONFIGURAÇÕES DE REDE
# ===========================================

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=device/status

# CORS
CORS_ORIGINS=*

# Timeout de rede
NETWORK_TIMEOUT=5

# ===========================================
# CONFIGURAÇÕES DE ALERTAS
# ===========================================

ALERT_RETENTION_DAYS=30


